@page "/"
@inject HttpClient Http

<PageTitle>Index</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Hello, world!</MudText>
<MudText Class="mb-8">Welcome to your new app, powered by MudBlazor!</MudText>
<MudAlert Severity="Severity.Normal">You can find documentation and examples on our website here: <MudLink
        Href="https://mudblazor.com" Typo="Typo.body2" Color="Color.Inherit"><b>www.mudblazor.com</b></MudLink>
</MudAlert>

@code
{
    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("Hello, world!");

        Stream savedModel = await Http.GetStreamAsync("model.zip");
        Console.WriteLine($"Model size: {savedModel.Length}");

        InferenceModel model = new InferenceModel(zipFileUrl: savedModel);
        ImageDataInput image = new ImageDataInput()
        {
            imagePath = $"wwwroot/images/dog.png"
        };
        model.PredictImage(image);
    }
}